<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009788"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout1"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circlefotoekle"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/insan" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout2"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/ad1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="Ad"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout3"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/soyad1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="Soyad"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout4"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/adres1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="Adres"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout5"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/telefon1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="Telefon"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout6"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/dogumyerivetarihi1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="Dogum Yeri Ve Tarihi"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout7"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/email1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="Mail "
                android:textAlignment="center"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout8"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/ehliyet1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="Ehliyet"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout9"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <Spinner
                android:id="@+id/medenidurum1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/spinnerbackground"
                android:paddingBottom="13dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout10"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <Button
                android:id="@+id/btnKaydet"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape_small"
                android:text="âœ“"
                android:textAllCaps="false"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/layout11"
            android:weightSum="9"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

            <EditText
                android:id="@+id/medenidurum2"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:hint="medenidurum"
                android:textAlignment="center"
                android:textSize="10sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>



